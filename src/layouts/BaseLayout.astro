---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = 'The open encyclopedia of development guidelines. Best practices for every framework, accessible to humans and AI agents.', ogImage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/topics', label: 'topics' },
  { href: '/technologies', label: 'technologies' },
  { href: '/api', label: 'api' },
  { href: '/contribute', label: 'contribute' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title} | erold.guide</title>
    <meta name="title" content={`${title} | erold.guide`} />
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | erold.guide`} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | erold.guide`} />
    <meta property="twitter:description" content={description} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen antialiased">
    <!-- Grid background -->
    <div class="fixed inset-0 bg-grid opacity-50 pointer-events-none"></div>

    <!-- Gradient glow -->
    <div class="fixed top-0 left-1/2 -translate-x-1/2 w-[800px] h-[600px] bg-glow-blue pointer-events-none"></div>

    <div class="relative flex min-h-screen flex-col">
      <!-- Header -->
      <header class="sticky top-0 z-50 border-b border-[--color-terminal-border] backdrop-blur-md" style="background: rgba(10, 10, 15, 0.8);">
        <div class="mx-auto flex h-14 max-w-6xl items-center justify-between px-4 sm:px-6">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-2.5 group">
            <div class="relative flex items-center justify-center w-8 h-8 rounded-lg" style="background: linear-gradient(135deg, rgba(37, 99, 235, 0.2), rgba(124, 58, 237, 0.2)); border: 1px solid rgba(37, 99, 235, 0.3);">
              <span class="font-mono font-bold text-sm text-gradient">G</span>
            </div>
            <span class="font-mono font-semibold text-[--color-terminal-text] group-hover:text-white transition-colors">
              erold<span class="text-[--color-primary-500]">.guide</span>
            </span>
          </a>

          <!-- Navigation -->
          <nav class="hidden sm:flex items-center gap-1">
            {navLinks.map((link) => (
              <a
                href={link.href}
                class:list={[
                  "nav-link font-mono text-sm",
                  currentPath.startsWith(link.href) && "nav-link-active"
                ]}
              >
                {link.label}
              </a>
            ))}
          </nav>

          <!-- Right side -->
          <div class="flex items-center gap-3">
            <!-- Search trigger -->
            <button
              id="search-trigger"
              class="hidden sm:flex items-center gap-2 px-3 py-1.5 rounded-lg text-sm font-mono transition-all"
              style="background: var(--color-terminal-surface); border: 1px solid var(--color-terminal-border); color: var(--color-terminal-muted);"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              <span class="text-xs">search</span>
              <div class="flex items-center gap-0.5 ml-2">
                <kbd class="kbd">⌘</kbd>
                <kbd class="kbd">K</kbd>
              </div>
            </button>

          </div>
        </div>
      </header>

      <!-- Main content -->
      <main class="flex-1 relative">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="relative border-t border-[--color-terminal-border] mt-12" style="background: var(--color-terminal-surface);">
        <div class="mx-auto max-w-6xl px-4 py-6 sm:px-6">
          <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
            <div class="flex items-center gap-6 font-mono text-xs" style="color: var(--color-terminal-muted);">
              <a href="/topics" class="hover:text-[--color-primary-400] transition-colors">Topics</a>
              <a href="/api" class="hover:text-[--color-primary-400] transition-colors">API</a>
              <a href="/contribute" class="hover:text-[--color-primary-400] transition-colors">Contribute</a>
            </div>
            <p class="font-mono text-xs" style="color: var(--color-terminal-muted);">
              MIT License · Part of <a href="https://erold.dev" class="text-[--color-primary-400] hover:underline">erold</a>
            </p>
          </div>
        </div>
      </footer>
    </div>

    <!-- Command Palette (hidden by default) -->
    <div id="command-palette-container" class="hidden">
      <div class="command-palette-overlay" id="command-overlay"></div>
      <div class="command-palette">
        <input
          type="text"
          class="command-palette-input"
          placeholder="Type to search guidelines..."
          id="command-input"
        />
        <div class="command-palette-results" id="command-results">
          <div class="px-3 py-2 text-xs font-mono uppercase tracking-wider" style="color: var(--color-terminal-comment);">
            Quick Actions
          </div>
          <div class="command-palette-item">
            <svg class="command-palette-item-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span>Go to Home</span>
            <kbd class="kbd ml-auto">↵</kbd>
          </div>
          <div class="command-palette-item">
            <svg class="command-palette-item-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
            </svg>
            <span>Browse Topics</span>
          </div>
          <div class="command-palette-item">
            <svg class="command-palette-item-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
            <span>API Documentation</span>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Command palette toggle
      const trigger = document.getElementById('search-trigger');
      const container = document.getElementById('command-palette-container');
      const overlay = document.getElementById('command-overlay');
      const input = document.getElementById('command-input');

      function openPalette() {
        container?.classList.remove('hidden');
        input?.focus();
      }

      function closePalette() {
        container?.classList.add('hidden');
      }

      trigger?.addEventListener('click', openPalette);
      overlay?.addEventListener('click', closePalette);

      document.addEventListener('keydown', (e) => {
        if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
          e.preventDefault();
          if (container?.classList.contains('hidden')) {
            openPalette();
          } else {
            closePalette();
          }
        }
        if (e.key === 'Escape') {
          closePalette();
        }
      });
    </script>
  </body>
</html>
