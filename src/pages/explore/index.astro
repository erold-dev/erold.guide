---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTopics, getGuidelinesByTopic } from '../../lib/content';

const topics = getTopics().map(topic => ({
  ...topic,
  guidelinesCount: getGuidelinesByTopic(topic.slug).length,
}));

const totalGuidelines = topics.reduce((sum, t) => sum + t.guidelinesCount, 0);

// Get unique technologies for filter
const technologies = [...new Set(topics.map(t => t.technology).filter(Boolean))];

// Pagination config
const ITEMS_PER_PAGE = 20;
const totalPages = Math.ceil(topics.length / ITEMS_PER_PAGE);
---

<BaseLayout title="Explore">
  <div class="page-layout">
    <!-- Main Content -->
    <main id="main-content" class="main-content">
      <!-- Header -->
      <header class="page-header">
        <h1>Explore Guidelines</h1>
        <p>Best practices for frameworks, libraries, and development tools.</p>
      </header>

      <!-- Search & Filters -->
      <div class="search-filters">
        <div class="search-box">
          <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <input
            type="search"
            id="topic-search"
            class="search-input"
            placeholder="Search topics..."
            aria-label="Search topics"
          />
        </div>

        {technologies.length > 0 && (
          <div class="filter-chips">
            <button class="filter-chip active" data-filter="all">All</button>
            {technologies.map(tech => (
              <button class="filter-chip" data-filter={tech}>{tech}</button>
            ))}
          </div>
        )}
      </div>

      <!-- Topics List -->
      <div id="topics-list" class="topics-list">
        {topics.map((topic, index) => (
          <a
            href={`/explore/${topic.slug}`}
            class="topic-row"
            data-technology={topic.technology || ''}
            data-name={topic.name.toLowerCase()}
            data-page={Math.floor(index / ITEMS_PER_PAGE) + 1}
          >
            <div class="topic-row-icon">
              {topic.logo ? (
                <img src={topic.logo} alt="" class="w-5 h-5" />
              ) : (
                <span>{topic.name.charAt(0)}</span>
              )}
            </div>
            <div class="topic-row-main">
              <h2 class="topic-row-title">{topic.name}</h2>
              <p class="topic-row-desc">{topic.description}</p>
            </div>
            <div class="topic-row-meta">
              <span class="topic-row-count">{topic.guidelinesCount}</span>
              <svg class="topic-row-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        ))}
      </div>

      <!-- Empty state -->
      <div id="empty-state" class="empty-state hidden">
        <p>No topics match your search.</p>
      </div>

      <!-- Pagination -->
      {totalPages > 1 && (
        <nav id="pagination" class="pagination" aria-label="Pagination">
          <button id="prev-page" class="pagination-btn" disabled>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Prev
          </button>
          <span id="page-info" class="pagination-info">Page 1 of {totalPages}</span>
          <button id="next-page" class="pagination-btn">
            Next
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </nav>
      )}
    </main>

    <!-- Right Sidebar -->
    <aside class="sidebar">
      <!-- Stats -->
      <div class="sidebar-box">
        <h3>Overview</h3>
        <dl class="stats-list">
          <div class="stat-item">
            <dt>Topics</dt>
            <dd>{topics.length}</dd>
          </div>
          <div class="stat-item">
            <dt>Guidelines</dt>
            <dd>{totalGuidelines}</dd>
          </div>
        </dl>
      </div>

      <!-- Quick Actions -->
      <div class="sidebar-box">
        <h3>Quick Actions</h3>
        <div class="sidebar-links">
          <a href="/api" class="sidebar-link">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
            API Documentation
          </a>
          <a href="/contribute" class="sidebar-link">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Contribute a Guideline
          </a>
        </div>
      </div>

      <!-- Popular Topics -->
      <div class="sidebar-box">
        <h3>Popular</h3>
        <div class="popular-list">
          {topics
            .sort((a, b) => b.guidelinesCount - a.guidelinesCount)
            .slice(0, 5)
            .map(topic => (
              <a href={`/explore/${topic.slug}`} class="popular-item">
                <span>{topic.name}</span>
                <span class="popular-count">{topic.guidelinesCount}</span>
              </a>
            ))
          }
        </div>
      </div>

      <!-- API Box -->
      <div class="sidebar-box sidebar-box-muted">
        <h3>For AI Agents</h3>
        <p>Access all guidelines programmatically via our JSON API.</p>
        <code class="api-endpoint">GET /api/v1/topics.json</code>
      </div>
    </aside>
  </div>
</BaseLayout>

<style>
  /* Two-column layout - matches header/footer max-w-6xl */
  .page-layout {
    display: grid;
    grid-template-columns: 1fr 280px;
    gap: 2.5rem;
    max-width: 72rem; /* matches max-w-6xl */
    margin: 0 auto;
    padding: 2rem 1rem; /* matches px-4 */
    align-items: start;
  }

  @media (min-width: 640px) {
    .page-layout {
      padding: 2rem 1.5rem; /* matches sm:px-6 */
    }
  }

  @media (max-width: 1024px) {
    .page-layout {
      grid-template-columns: 1fr;
    }

    .sidebar {
      display: none;
    }
  }

  /* Main content */
  .main-content {
    min-width: 0;
  }

  .page-header {
    margin-bottom: 1.5rem;
  }

  .page-header h1 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
  }

  .page-header p {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  /* Search & Filters */
  .search-filters {
    margin-bottom: 1.5rem;
  }

  .search-box {
    position: relative;
    margin-bottom: 0.75rem;
  }

  .search-icon {
    position: absolute;
    left: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    width: 1rem;
    height: 1rem;
    color: var(--text-muted);
  }

  .search-input {
    width: 100%;
    padding: 0.625rem 0.75rem 0.625rem 2.25rem;
    font-size: 0.875rem;
    border-radius: 0.5rem;
    border: 1px solid var(--border-primary);
    background: var(--bg-secondary);
    color: var(--text-primary);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 3px var(--accent-bg);
  }

  .search-input::placeholder {
    color: var(--text-muted);
  }

  .filter-chips {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .filter-chip {
    padding: 0.375rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 9999px;
    border: 1px solid var(--border-secondary);
    background: var(--bg-secondary);
    color: var(--text-muted);
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .filter-chip:hover, .filter-chip.active {
    background: var(--bg-tertiary);
    border-color: var(--border-primary);
    color: var(--text-primary);
  }

  /* Topics list */
  .topics-list {
    display: flex;
    flex-direction: column;
  }

  .topic-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 0;
    border-bottom: 1px solid var(--border-secondary);
    transition: all 0.1s ease;
  }

  .topic-row:hover {
    background: var(--bg-secondary);
    margin: 0 -0.75rem;
    padding: 0.875rem 0.75rem;
    border-radius: 0.5rem;
    border-bottom-color: transparent;
  }

  .topic-row:last-child {
    border-bottom: none;
  }

  .topic-row.hidden {
    display: none;
  }

  .topic-row-icon {
    width: 2rem;
    height: 2rem;
    border-radius: 0.375rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background: var(--bg-tertiary);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-muted);
  }

  .topic-row-main {
    flex: 1;
    min-width: 0;
  }

  .topic-row-title {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--text-primary);
    line-height: 1.3;
  }

  .topic-row:hover .topic-row-title {
    color: var(--accent-primary);
  }

  .topic-row-desc {
    font-size: 0.8125rem;
    color: var(--text-muted);
    line-height: 1.4;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .topic-row-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .topic-row-count {
    font-size: 0.8125rem;
    font-weight: 600;
    font-family: var(--font-mono);
    color: var(--text-muted);
  }

  .topic-row-arrow {
    width: 1rem;
    height: 1rem;
    color: var(--text-muted);
    opacity: 0;
    transition: opacity 0.15s ease;
  }

  .topic-row:hover .topic-row-arrow {
    opacity: 1;
    color: var(--accent-primary);
  }

  /* Empty state */
  .empty-state {
    text-align: center;
    padding: 3rem 1rem;
    color: var(--text-muted);
  }

  .empty-state.hidden {
    display: none;
  }

  /* Pagination */
  .pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border-secondary);
  }

  .pagination-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.5rem 0.75rem;
    font-size: 0.8125rem;
    font-weight: 500;
    border-radius: 0.375rem;
    border: 1px solid var(--border-primary);
    background: var(--bg-secondary);
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .pagination-btn:hover:not(:disabled) {
    background: var(--bg-tertiary);
    color: var(--text-primary);
  }

  .pagination-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .pagination-info {
    font-size: 0.8125rem;
    color: var(--text-muted);
  }

  /* Sidebar */
  .sidebar {
    position: sticky;
    top: 5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .sidebar-box {
    padding: 1rem;
    border-radius: 0.75rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-secondary);
  }

  .sidebar-box-muted {
    background: var(--bg-tertiary);
  }

  .sidebar-box h3 {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
    margin-bottom: 0.75rem;
  }

  .sidebar-box p {
    font-size: 0.8125rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: 0.75rem;
  }

  .stats-list {
    display: flex;
    gap: 1.5rem;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
  }

  .stat-item dt {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .stat-item dd {
    font-size: 1.25rem;
    font-weight: 700;
    font-family: var(--font-mono);
    color: var(--text-primary);
  }

  .sidebar-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .sidebar-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    color: var(--text-secondary);
    transition: color 0.15s ease;
  }

  .sidebar-link:hover {
    color: var(--accent-primary);
  }

  .popular-list {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .popular-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.375rem 0;
    font-size: 0.8125rem;
    color: var(--text-secondary);
    transition: color 0.15s ease;
  }

  .popular-item:hover {
    color: var(--accent-primary);
  }

  .popular-count {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .api-endpoint {
    display: block;
    font-size: 0.75rem;
    padding: 0.5rem;
    border-radius: 0.375rem;
    background: var(--bg-primary);
    color: var(--accent-primary);
    font-family: var(--font-mono);
    overflow-x: auto;
  }
</style>

<script>
  const searchInput = document.getElementById('topic-search') as HTMLInputElement;
  const filterChips = document.querySelectorAll('.filter-chip');
  const topicRows = document.querySelectorAll('.topic-row');
  const emptyState = document.getElementById('empty-state');
  const pagination = document.getElementById('pagination');
  const prevBtn = document.getElementById('prev-page') as HTMLButtonElement;
  const nextBtn = document.getElementById('next-page') as HTMLButtonElement;
  const pageInfo = document.getElementById('page-info');

  let currentPage = 1;
  let currentFilter = 'all';
  let searchQuery = '';
  const ITEMS_PER_PAGE = 20;

  function filterAndPaginate() {
    let visibleCount = 0;
    let pageCount = 0;
    let currentPageItems = 0;

    topicRows.forEach((row) => {
      const el = row as HTMLElement;
      const tech = el.dataset.technology || '';
      const name = el.dataset.name || '';

      const matchesFilter = currentFilter === 'all' || tech === currentFilter;
      const matchesSearch = !searchQuery || name.includes(searchQuery.toLowerCase());

      if (matchesFilter && matchesSearch) {
        visibleCount++;
        const itemPage = Math.ceil(visibleCount / ITEMS_PER_PAGE);

        if (itemPage === currentPage) {
          el.classList.remove('hidden');
          currentPageItems++;
        } else {
          el.classList.add('hidden');
        }
        pageCount = itemPage;
      } else {
        el.classList.add('hidden');
      }
    });

    // Update pagination
    if (pagination && pageInfo && prevBtn && nextBtn) {
      if (pageCount <= 1) {
        pagination.style.display = 'none';
      } else {
        pagination.style.display = 'flex';
        pageInfo.textContent = `Page ${currentPage} of ${pageCount}`;
        prevBtn.disabled = currentPage === 1;
        nextBtn.disabled = currentPage === pageCount;
      }
    }

    // Empty state
    if (emptyState) {
      emptyState.classList.toggle('hidden', visibleCount > 0);
    }
  }

  // Search
  searchInput?.addEventListener('input', (e) => {
    searchQuery = (e.target as HTMLInputElement).value;
    currentPage = 1;
    filterAndPaginate();
  });

  // Filter chips
  filterChips.forEach(chip => {
    chip.addEventListener('click', () => {
      filterChips.forEach(c => c.classList.remove('active'));
      chip.classList.add('active');
      currentFilter = (chip as HTMLElement).dataset.filter || 'all';
      currentPage = 1;
      filterAndPaginate();
    });
  });

  // Pagination
  prevBtn?.addEventListener('click', () => {
    if (currentPage > 1) {
      currentPage--;
      filterAndPaginate();
    }
  });

  nextBtn?.addEventListener('click', () => {
    currentPage++;
    filterAndPaginate();
  });

  // Initial filter
  filterAndPaginate();
</script>
