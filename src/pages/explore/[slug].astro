<script>
  const searchInput = document.getElementById('guideline-search') as HTMLInputElement;
  const filterChips = document.querySelectorAll('.filter-chip[data-filter-type="category"]');
  const difficultySelect = document.getElementById('difficulty-filter') as HTMLSelectElement;
  const categoryItems = document.querySelectorAll('.category-item');
  const guidelineRows = document.querySelectorAll('.guideline-row');
  const emptyState = document.getElementById('empty-state');
  const pagination = document.getElementById('pagination');
  const prevBtn = document.getElementById('prev-page') as HTMLButtonElement;
  const nextBtn = document.getElementById('next-page') as HTMLButtonElement;
  const pageInfo = document.getElementById('page-info');

  let currentPage = 1;
  let currentCategory = 'all';
  let currentDifficulty = 'all';
  let searchQuery = '';
  const ITEMS_PER_PAGE = 25;

  function filterAndPaginate() {
    let visibleCount = 0;
    let pageCount = 0;

    guidelineRows.forEach((row) => {
      const el = row as HTMLElement;
      const category = el.dataset.category || '';
      const difficulty = el.dataset.difficulty || '';
      const title = el.dataset.title || '';

      const matchesCategory = currentCategory === 'all' || category === currentCategory;
      const matchesDifficulty = currentDifficulty === 'all' || difficulty === currentDifficulty;
      const matchesSearch = !searchQuery || title.includes(searchQuery.toLowerCase());

      if (matchesCategory && matchesDifficulty && matchesSearch) {
        visibleCount++;
        const itemPage = Math.ceil(visibleCount / ITEMS_PER_PAGE);

        if (itemPage === currentPage) {
          el.classList.remove('hidden');
        } else {
          el.classList.add('hidden');
        }
        pageCount = itemPage;
      } else {
        el.classList.add('hidden');
      }
    });

    // Update pagination
    if (pagination && pageInfo && prevBtn && nextBtn) {
      if (pageCount <= 1) {
        pagination.style.display = 'none';
      } else {
        pagination.style.display = 'flex';
        pageInfo.textContent = `Page ${currentPage} of ${pageCount}`;
        prevBtn.disabled = currentPage === 1;
        nextBtn.disabled = currentPage === pageCount;
      }
    }

    // Empty state
    if (emptyState) {
      emptyState.classList.toggle('hidden', visibleCount > 0);
    }
  }

  // Search
  searchInput?.addEventListener('input', (e) => {
    searchQuery = (e.target as HTMLInputElement).value;
    currentPage = 1;
    filterAndPaginate();
  });

  // Category filter chips
  filterChips.forEach(chip => {
    chip.addEventListener('click', () => {
      filterChips.forEach(c => c.classList.remove('active'));
      chip.classList.add('active');
      currentCategory = (chip as HTMLElement).dataset.filter || 'all';
      currentPage = 1;
      filterAndPaginate();
    });
  });

  // Category sidebar items
  categoryItems.forEach(item => {
    item.addEventListener('click', () => {
      const category = (item as HTMLElement).dataset.category || '';
      currentCategory = category;
      currentPage = 1;

      // Update filter chips
      filterChips.forEach(c => {
        c.classList.toggle('active', (c as HTMLElement).dataset.filter === category);
      });

      filterAndPaginate();
    });
  });

  // Difficulty filter
  difficultySelect?.addEventListener('change', (e) => {
    currentDifficulty = (e.target as HTMLSelectElement).value;
    currentPage = 1;
    filterAndPaginate();
  });

  // Pagination
  prevBtn?.addEventListener('click', () => {
    if (currentPage > 1) {
      currentPage--;
      filterAndPaginate();
    }
  });

  nextBtn?.addEventListener('click', () => {
    currentPage++;
    filterAndPaginate();
  });

  // Initial filter
  filterAndPaginate();
</script>
