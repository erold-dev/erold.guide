---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTopics, getTopic, getGuidelinesByTopic } from '../../lib/content';

export function getStaticPaths() {
  const topics = getTopics();
  return topics.map((topic) => ({
    params: { slug: topic.slug },
  }));
}

const { slug } = Astro.params;
const topic = getTopic(slug);

if (!topic) {
  return Astro.redirect('/404');
}

const guidelines = getGuidelinesByTopic(slug);

const guidelinesByCategory = guidelines.reduce((acc, g) => {
  if (!acc[g.category]) {
    acc[g.category] = [];
  }
  acc[g.category].push(g);
  return acc;
}, {} as Record<string, typeof guidelines>);

const categories = Object.keys(guidelinesByCategory).sort();

// Get unique difficulties for filter
const difficulties = [...new Set(guidelines.map(g => g.difficulty))];

// Pagination config
const ITEMS_PER_PAGE = 25;
const totalPages = Math.ceil(guidelines.length / ITEMS_PER_PAGE);
---

<BaseLayout title={topic.name} description={topic.description}>
  <div class="page-layout">
    <!-- Main Content -->
    <main id="main-content" class="main-content">
      <!-- Header -->
      <header class="page-header">
        <nav class="breadcrumb">
          <a href="/">Home</a>
          <span>/</span>
          <a href="/explore">Explore</a>
          <span>/</span>
          <span class="current">{topic.name}</span>
        </nav>

        <div class="topic-header">
          {topic.logo && (
            <div class="topic-icon">
              <img src={topic.logo} alt="" />
            </div>
          )}
          <div>
            <h1>{topic.name}</h1>
            <p>{topic.description}</p>
          </div>
        </div>

        <!-- External links -->
        <div class="topic-links">
          {topic.website && (
            <a href={topic.website} target="_blank" rel="noopener">
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              Website
            </a>
          )}
          {topic.documentation && (
            <a href={topic.documentation} target="_blank" rel="noopener">
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              Docs
            </a>
          )}
          {topic.repository && (
            <a href={topic.repository} target="_blank" rel="noopener">
              <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
              </svg>
              GitHub
            </a>
          )}
        </div>
      </header>

      <!-- Search & Filters -->
      <div class="search-filters">
        <div class="search-box">
          <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <input
            type="search"
            id="guideline-search"
            class="search-input"
            placeholder="Search guidelines..."
            aria-label="Search guidelines"
          />
        </div>

        <div class="filter-row">
          {categories.length > 1 && (
            <div class="filter-chips">
              <button class="filter-chip active" data-filter="all" data-filter-type="category">All</button>
              {categories.map(cat => (
                <button class="filter-chip" data-filter={cat} data-filter-type="category">
                  {cat.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}
                </button>
              ))}
            </div>
          )}

          <div class="difficulty-filter">
            <select id="difficulty-filter" class="filter-select">
              <option value="all">All levels</option>
              {difficulties.map(d => (
                <option value={d}>{d.charAt(0).toUpperCase() + d.slice(1)}</option>
              ))}
            </select>
          </div>
        </div>
      </div>

      <!-- Guidelines List -->
      {guidelines.length > 0 ? (
        <div id="guidelines-list" class="guidelines-list">
          {guidelines.map((g, index) => (
            <a
              href={`/guidelines/${g.topic}/${g.category}/${g.slug}`}
              class="guideline-row"
              data-category={g.category}
              data-difficulty={g.difficulty}
              data-title={g.title.toLowerCase()}
              data-page={Math.floor(index / ITEMS_PER_PAGE) + 1}
            >
              <div class="guideline-row-main">
                <h3 class="guideline-row-title">{g.title}</h3>
                <p class="guideline-row-desc">{g.description}</p>
              </div>
              <div class="guideline-row-meta">
                <span class={`difficulty-badge difficulty-${g.difficulty}`}>{g.difficulty}</span>
                <span class="guideline-row-time">{g.estimatedReadTime}m</span>
                <svg class="guideline-row-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <p>No guidelines yet for {topic.name}.</p>
          <a href="/contribute" class="btn-primary">Contribute a Guideline</a>
        </div>
      )}

      <!-- Empty search state -->
      <div id="empty-state" class="empty-state hidden">
        <p>No guidelines match your filters.</p>
      </div>

      <!-- Pagination -->
      {totalPages > 1 && (
        <nav id="pagination" class="pagination" aria-label="Pagination">
          <button id="prev-page" class="pagination-btn" disabled>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Prev
          </button>
          <span id="page-info" class="pagination-info">Page 1 of {totalPages}</span>
          <button id="next-page" class="pagination-btn">
            Next
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </nav>
      )}
    </main>

    <!-- Right Sidebar -->
    <aside class="sidebar">
      <!-- Stats -->
      <div class="sidebar-box">
        <h3>Overview</h3>
        <dl class="stats-list">
          <div class="stat-item">
            <dt>Guidelines</dt>
            <dd>{guidelines.length}</dd>
          </div>
          <div class="stat-item">
            <dt>Categories</dt>
            <dd>{categories.length}</dd>
          </div>
          {topic.currentVersion && (
            <div class="stat-item">
              <dt>Version</dt>
              <dd>v{topic.currentVersion}</dd>
            </div>
          )}
        </dl>
      </div>

      <!-- Categories -->
      {categories.length > 0 && (
        <div class="sidebar-box">
          <h3>Categories</h3>
          <div class="category-list">
            {categories.map(cat => (
              <button class="category-item" data-category={cat}>
                <span>{cat.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}</span>
                <span class="category-count">{guidelinesByCategory[cat].length}</span>
              </button>
            ))}
          </div>
        </div>
      )}

      <!-- Quick Actions -->
      <div class="sidebar-box">
        <h3>Actions</h3>
        <div class="sidebar-links">
          <a href="/contribute" class="sidebar-link">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Contribute to {topic.name}
          </a>
          <a href="/explore" class="sidebar-link">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
            </svg>
            Browse all topics
          </a>
        </div>
      </div>

      <!-- API -->
      <div class="sidebar-box sidebar-box-muted">
        <h3>API Access</h3>
        <p>Get these guidelines via JSON API.</p>
        <code class="api-endpoint">GET /api/v1/topics/{topic.slug}/_index.json</code>
      </div>
    </aside>
  </div>
</BaseLayout>

