---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Submit Guideline" description="Submit a new guideline to erold.guide">
  <div class="mx-auto max-w-3xl px-4 sm:px-6 py-12">
    <!-- Auth Check -->
    <div id="auth-required" class="hidden">
      <div class="text-center py-16">
        <div class="w-16 h-16 mx-auto mb-6 rounded-full flex items-center justify-center" style="background: var(--color-error-bg); border: 1px solid var(--color-error);">
          <svg class="w-8 h-8" style="color: var(--color-error);" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m0 0v2m0-2h2m-2 0H10m2-10a4 4 0 100 8 4 4 0 000-8z" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold mb-4" style="color: var(--text-primary);">Sign in required</h1>
        <p class="mb-6" style="color: var(--text-secondary);">Please sign in with GitHub to submit a guideline.</p>
        <a href="/contribute" class="btn btn-primary">
          Go to Contribute
        </a>
      </div>
    </div>

    <!-- Wizard Form -->
    <div id="wizard-container" class="hidden">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-2xl font-bold mb-2" style="color: var(--text-primary);">Submit a Guideline</h1>
        <p style="color: var(--text-secondary);">Share your knowledge with the community</p>
      </div>

      <!-- Progress Steps -->
      <nav class="wizard-steps mb-8" aria-label="Form progress">
        <div class="wizard-step active" data-step="1">
          <div class="wizard-step-number">1</div>
          <span class="wizard-step-label">Basics</span>
        </div>
        <div class="wizard-step-connector"></div>
        <div class="wizard-step" data-step="2">
          <div class="wizard-step-number">2</div>
          <span class="wizard-step-label">Content</span>
        </div>
        <div class="wizard-step-connector"></div>
        <div class="wizard-step" data-step="3">
          <div class="wizard-step-number">3</div>
          <span class="wizard-step-label">Details</span>
        </div>
        <div class="wizard-step-connector"></div>
        <div class="wizard-step" data-step="4">
          <div class="wizard-step-number">4</div>
          <span class="wizard-step-label">Review</span>
        </div>
      </nav>

      <form id="guideline-form" novalidate>
        <!-- Step 1: Basics -->
        <div class="wizard-panel surface" data-panel="1">
          <h2 class="text-lg font-semibold mb-6" style="color: var(--text-primary);">
            Basic Information
          </h2>

          <div class="space-y-6">
            <div>
              <label for="topic" class="form-label">
                Topic <span style="color: var(--color-error);">*</span>
              </label>
              <input
                type="text"
                id="topic"
                name="topic"
                required
                pattern="^[a-z0-9]+(-[a-z0-9]+)*$"
                placeholder="react, docker, accessibility"
                class="form-input font-mono"
                aria-describedby="topic-hint"
              />
              <p id="topic-hint" class="mt-2 text-sm" style="color: var(--text-muted);">
                Lowercase, hyphens only. Technology, concept, or tool.
              </p>
            </div>

            <div>
              <label for="category" class="form-label">
                Category <span style="color: var(--color-error);">*</span>
              </label>
              <input
                type="text"
                id="category"
                name="category"
                required
                pattern="^[a-z0-9]+(-[a-z0-9]+)*$"
                placeholder="security, performance, best-practices"
                class="form-input font-mono"
                aria-describedby="category-hint"
              />
              <p id="category-hint" class="mt-2 text-sm" style="color: var(--text-muted);">
                Groups related guidelines together.
              </p>
            </div>

            <div>
              <label for="title" class="form-label">
                Title <span style="color: var(--color-error);">*</span>
              </label>
              <input
                type="text"
                id="title"
                name="title"
                required
                minlength="5"
                maxlength="100"
                placeholder="Use Server Components by Default"
                class="form-input"
                aria-describedby="title-hint"
              />
              <p id="title-hint" class="mt-2 text-sm" style="color: var(--text-muted);">
                Clear, actionable title (5-100 characters)
              </p>
            </div>
          </div>

          <div class="flex justify-end mt-8">
            <button type="button" class="btn btn-primary" data-next="2">
              Continue
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </button>
          </div>
        </div>

        <!-- Step 2: Content -->
        <div class="wizard-panel surface hidden" data-panel="2">
          <h2 class="text-lg font-semibold mb-6" style="color: var(--text-primary);">
            Guideline Content
          </h2>

          <div class="space-y-6">
            <div>
              <label for="description" class="form-label">
                Description <span style="color: var(--color-error);">*</span>
              </label>
              <textarea
                id="description"
                name="description"
                required
                minlength="20"
                maxlength="300"
                rows="2"
                placeholder="A brief summary for search results..."
                class="form-input"
                aria-describedby="desc-hint"
              ></textarea>
              <p id="desc-hint" class="mt-2 text-sm" style="color: var(--text-muted);">
                <span id="desc-count">0</span>/300 characters
              </p>
            </div>

            <div>
              <label for="content" class="form-label">
                Content <span style="color: var(--color-error);">*</span>
                <span class="form-hint ml-2">(Markdown)</span>
              </label>
              <div class="rounded-lg overflow-hidden border-2" style="border-color: var(--border-primary);">
                <div class="flex border-b" style="border-color: var(--border-secondary); background: var(--bg-tertiary);">
                  <button type="button" id="tab-write" class="px-4 py-2 text-sm font-medium border-b-2" style="border-color: var(--color-primary-500); color: var(--text-primary);">
                    Write
                  </button>
                  <button type="button" id="tab-preview" class="px-4 py-2 text-sm font-medium border-b-2 border-transparent" style="color: var(--text-muted);">
                    Preview
                  </button>
                </div>
                <textarea
                  id="content"
                  name="content"
                  required
                  minlength="100"
                  rows="16"
                  placeholder="# Your Guideline

Explain the guideline here...

## Why This Matters

## Code Example

```javascript
// Your code
```

## Summary"
                  class="w-full px-4 py-3 outline-none font-mono text-sm"
                  style="background: var(--bg-secondary); color: var(--text-primary); resize: vertical; min-height: 400px;"
                  aria-describedby="content-hint"
                ></textarea>
                <div id="preview-container" class="hidden px-4 py-3 prose" style="background: var(--bg-secondary); min-height: 400px; overflow-y: auto;"></div>
              </div>
              <p id="content-hint" class="mt-2 text-sm" style="color: var(--text-muted);">
                <span id="content-count">0</span> characters (minimum 100)
              </p>
            </div>
          </div>

          <div class="flex justify-between mt-8">
            <button type="button" class="btn btn-secondary" data-prev="1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back
            </button>
            <button type="button" class="btn btn-primary" data-next="3">
              Continue
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </button>
          </div>
        </div>

        <!-- Step 3: Details -->
        <div class="wizard-panel surface hidden" data-panel="3">
          <h2 class="text-lg font-semibold mb-6" style="color: var(--text-primary);">
            Additional Details
          </h2>

          <div class="space-y-6">
            <div>
              <label for="difficulty" class="form-label">Difficulty</label>
              <select id="difficulty" name="difficulty" class="form-input form-select">
                <option value="beginner">Beginner</option>
                <option value="intermediate" selected>Intermediate</option>
                <option value="advanced">Advanced</option>
              </select>
            </div>

            <div>
              <label for="tags-input" class="form-label">
                Tags <span style="color: var(--color-error);">*</span>
              </label>
              <div id="tags-container" class="flex flex-wrap gap-2 mb-2" role="list" aria-label="Added tags"></div>
              <input
                type="text"
                id="tags-input"
                placeholder="Press Enter to add a tag..."
                class="form-input"
                aria-describedby="tags-hint"
              />
              <input type="hidden" id="tags" name="tags" value="[]" />
              <p id="tags-hint" class="mt-2 text-sm" style="color: var(--text-muted);">
                Add 1-10 tags for discovery
              </p>
            </div>

            <div>
              <label for="related-input" class="form-label">
                Related Guidelines
                <span class="form-hint ml-2">(optional)</span>
              </label>
              <div id="related-container" class="flex flex-wrap gap-2 mb-2" role="list" aria-label="Related guidelines"></div>
              <input
                type="text"
                id="related-input"
                placeholder="topic/category/slug"
                class="form-input font-mono"
                aria-describedby="related-hint"
              />
              <input type="hidden" id="related" name="related" value="[]" />
              <p id="related-hint" class="mt-2 text-sm" style="color: var(--text-muted);">
                Paths to related guidelines
              </p>
            </div>
          </div>

          <div class="flex justify-between mt-8">
            <button type="button" class="btn btn-secondary" data-prev="2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back
            </button>
            <button type="button" class="btn btn-primary" data-next="4">
              Review
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </button>
          </div>
        </div>

        <!-- Step 4: Review -->
        <div class="wizard-panel surface hidden" data-panel="4">
          <h2 class="text-lg font-semibold mb-6" style="color: var(--text-primary);">
            Review & Submit
          </h2>

          <div class="space-y-4" id="review-summary">
            <!-- Populated dynamically -->
          </div>

          <!-- Error Message -->
          <div id="error-message" class="form-error hidden mt-6" role="alert">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span id="error-text"></span>
          </div>

          <div class="flex justify-between mt-8">
            <button type="button" class="btn btn-secondary" data-prev="3">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back
            </button>
            <button type="submit" id="submit-btn" class="btn btn-primary">
              <span id="submit-text">Submit for Review</span>
              <svg id="submit-spinner" class="hidden w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </button>
          </div>
        </div>
      </form>
    </div>

    <!-- Success State -->
    <div id="success-state" class="hidden">
      <div class="text-center py-16">
        <div class="w-16 h-16 mx-auto mb-6 rounded-full flex items-center justify-center" style="background: var(--color-success-bg); border: 1px solid var(--color-success);">
          <svg class="w-8 h-8" style="color: var(--color-success);" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold mb-4" style="color: var(--text-primary);">Submitted!</h1>
        <p class="mb-2" style="color: var(--text-secondary);">Your guideline is now being reviewed.</p>
        <p class="mb-6" style="color: var(--text-muted);">
          ID: <code class="font-mono px-2 py-1 rounded" style="background: var(--bg-tertiary);" id="contribution-id"></code>
        </p>
        <div class="flex items-center justify-center gap-4">
          <a href="/contribute" class="btn btn-secondary">View Contributions</a>
          <button type="button" id="submit-another" class="btn btn-primary">Submit Another</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    const API_URL = 'https://su5t4tzra5.execute-api.eu-west-1.amazonaws.com';
    let currentStep = 1;
    let tags: string[] = [];
    let related: string[] = [];

    // Auth check
    function checkAuth() {
      const token = localStorage.getItem('erold_token');
      const authRequired = document.getElementById('auth-required');
      const wizard = document.getElementById('wizard-container');

      if (!token) {
        authRequired?.classList.remove('hidden');
        wizard?.classList.add('hidden');
      } else {
        authRequired?.classList.add('hidden');
        wizard?.classList.remove('hidden');
      }
    }

    // Wizard navigation
    function goToStep(step: number) {
      // Validate current step before proceeding
      if (step > currentStep && !validateStep(currentStep)) {
        return;
      }

      // Update panels
      document.querySelectorAll('.wizard-panel').forEach(panel => {
        panel.classList.add('hidden');
      });
      document.querySelector(`[data-panel="${step}"]`)?.classList.remove('hidden');

      // Update step indicators
      document.querySelectorAll('.wizard-step').forEach(stepEl => {
        const stepNum = parseInt(stepEl.getAttribute('data-step') || '1');
        stepEl.classList.remove('active', 'completed');
        if (stepNum < step) {
          stepEl.classList.add('completed');
        } else if (stepNum === step) {
          stepEl.classList.add('active');
        }
      });

      currentStep = step;

      // Generate review on step 4
      if (step === 4) {
        generateReview();
      }

      // Scroll to top
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function validateStep(step: number): boolean {
      const panel = document.querySelector(`[data-panel="${step}"]`);
      if (!panel) return true;

      const inputs = panel.querySelectorAll('input[required], textarea[required], select[required]');
      let valid = true;

      inputs.forEach(input => {
        const el = input as HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement;
        if (!el.checkValidity()) {
          el.reportValidity();
          valid = false;
        }
      });

      // Check tags on step 3
      if (step === 3 && tags.length < 1) {
        showError('Please add at least one tag');
        return false;
      }

      return valid;
    }

    function generateReview() {
      const summary = document.getElementById('review-summary');
      if (!summary) return;

      const topic = (document.getElementById('topic') as HTMLInputElement).value;
      const category = (document.getElementById('category') as HTMLInputElement).value;
      const title = (document.getElementById('title') as HTMLInputElement).value;
      const description = (document.getElementById('description') as HTMLTextAreaElement).value;
      const difficulty = (document.getElementById('difficulty') as HTMLSelectElement).value;
      const content = (document.getElementById('content') as HTMLTextAreaElement).value;

      summary.innerHTML = `
        <div class="surface p-4 rounded-lg space-y-3">
          <div class="flex justify-between">
            <span style="color: var(--text-muted);">Topic</span>
            <span class="font-mono" style="color: var(--text-primary);">${escapeHtml(topic)}</span>
          </div>
          <div class="flex justify-between">
            <span style="color: var(--text-muted);">Category</span>
            <span class="font-mono" style="color: var(--text-primary);">${escapeHtml(category)}</span>
          </div>
          <div class="flex justify-between">
            <span style="color: var(--text-muted);">Title</span>
            <span style="color: var(--text-primary);">${escapeHtml(title)}</span>
          </div>
          <div class="flex justify-between">
            <span style="color: var(--text-muted);">Difficulty</span>
            <span class="badge badge-${difficulty === 'beginner' ? 'success' : difficulty === 'advanced' ? 'error' : 'warning'}">${difficulty}</span>
          </div>
          <div class="flex justify-between">
            <span style="color: var(--text-muted);">Tags</span>
            <span style="color: var(--text-primary);">${tags.length} tags</span>
          </div>
          <div>
            <span style="color: var(--text-muted);">Description</span>
            <p class="mt-1 text-sm" style="color: var(--text-secondary);">${escapeHtml(description)}</p>
          </div>
          <div>
            <span style="color: var(--text-muted);">Content</span>
            <p class="mt-1 text-sm" style="color: var(--text-secondary);">${content.length} characters</p>
          </div>
        </div>
      `;
    }

    function escapeHtml(str: string): string {
      const div = document.createElement('div');
      div.textContent = str;
      return div.innerHTML;
    }

    function showError(message: string) {
      const errorEl = document.getElementById('error-message');
      const errorText = document.getElementById('error-text');
      if (errorEl && errorText) {
        errorText.textContent = message;
        errorEl.classList.remove('hidden');
        errorEl.focus();
      }
    }

    function hideError() {
      document.getElementById('error-message')?.classList.add('hidden');
    }

    // Chip list handlers
    function renderChips(container: HTMLElement, items: string[], onRemove: (index: number) => void) {
      container.innerHTML = '';
      items.forEach((item, index) => {
        const chip = document.createElement('span');
        chip.className = 'chip';
        chip.innerHTML = `
          ${escapeHtml(item)}
          <button type="button" class="chip-remove" aria-label="Remove ${escapeHtml(item)}">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        `;
        chip.querySelector('button')?.addEventListener('click', () => onRemove(index));
        container.appendChild(chip);
      });
    }

    // Tags
    const tagsContainer = document.getElementById('tags-container');
    const tagsInput = document.getElementById('tags-input') as HTMLInputElement;
    const tagsHidden = document.getElementById('tags') as HTMLInputElement;

    tagsInput?.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        const value = tagsInput.value.trim().toLowerCase().replace(/[^a-z0-9-]/g, '-').replace(/-+/g, '-');
        if (value && !tags.includes(value) && tags.length < 10) {
          tags.push(value);
          renderChips(tagsContainer!, tags, (i) => {
            tags.splice(i, 1);
            renderChips(tagsContainer!, tags, () => {});
            tagsHidden.value = JSON.stringify(tags);
          });
          tagsHidden.value = JSON.stringify(tags);
          tagsInput.value = '';
        }
      }
    });

    // Related guidelines
    const relatedContainer = document.getElementById('related-container');
    const relatedInput = document.getElementById('related-input') as HTMLInputElement;
    const relatedHidden = document.getElementById('related') as HTMLInputElement;

    relatedInput?.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        const value = relatedInput.value.trim().toLowerCase();
        if (value && !related.includes(value) && related.length < 10) {
          related.push(value);
          renderChips(relatedContainer!, related, (i) => {
            related.splice(i, 1);
            renderChips(relatedContainer!, related, () => {});
            relatedHidden.value = JSON.stringify(related);
          });
          relatedHidden.value = JSON.stringify(related);
          relatedInput.value = '';
        }
      }
    });

    // Character counters
    const descInput = document.getElementById('description') as HTMLTextAreaElement;
    const descCount = document.getElementById('desc-count');
    descInput?.addEventListener('input', () => {
      if (descCount) descCount.textContent = String(descInput.value.length);
    });

    const contentInput = document.getElementById('content') as HTMLTextAreaElement;
    const contentCount = document.getElementById('content-count');
    contentInput?.addEventListener('input', () => {
      if (contentCount) contentCount.textContent = String(contentInput.value.length);
    });

    // Preview tabs
    const tabWrite = document.getElementById('tab-write');
    const tabPreview = document.getElementById('tab-preview');
    const previewContainer = document.getElementById('preview-container');

    tabWrite?.addEventListener('click', () => {
      tabWrite.style.borderColor = 'var(--color-primary-500)';
      tabWrite.style.color = 'var(--text-primary)';
      tabPreview!.style.borderColor = 'transparent';
      tabPreview!.style.color = 'var(--text-muted)';
      contentInput?.classList.remove('hidden');
      previewContainer?.classList.add('hidden');
    });

    tabPreview?.addEventListener('click', () => {
      tabPreview.style.borderColor = 'var(--color-primary-500)';
      tabPreview.style.color = 'var(--text-primary)';
      tabWrite!.style.borderColor = 'transparent';
      tabWrite!.style.color = 'var(--text-muted)';
      contentInput?.classList.add('hidden');
      previewContainer?.classList.remove('hidden');

      // Basic markdown preview
      if (previewContainer && contentInput) {
        let html = contentInput.value
          .replace(/^### (.*$)/gim, '<h3>$1</h3>')
          .replace(/^## (.*$)/gim, '<h2>$1</h2>')
          .replace(/^# (.*$)/gim, '<h1>$1</h1>')
          .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
          .replace(/\*(.*?)\*/g, '<em>$1</em>')
          .replace(/`([^`]+)`/g, '<code>$1</code>')
          .replace(/```(\w*)\n([\s\S]*?)```/g, '<pre><code>$2</code></pre>')
          .replace(/\n/g, '<br>');
        previewContainer.innerHTML = html || '<p style="color: var(--text-muted);">Nothing to preview...</p>';
      }
    });

    // Navigation buttons
    document.querySelectorAll('[data-next]').forEach(btn => {
      btn.addEventListener('click', () => {
        const next = parseInt(btn.getAttribute('data-next') || '1');
        goToStep(next);
      });
    });

    document.querySelectorAll('[data-prev]').forEach(btn => {
      btn.addEventListener('click', () => {
        const prev = parseInt(btn.getAttribute('data-prev') || '1');
        goToStep(prev);
      });
    });

    // Form submission
    const form = document.getElementById('guideline-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn');
    const submitText = document.getElementById('submit-text');
    const submitSpinner = document.getElementById('submit-spinner');
    const successState = document.getElementById('success-state');
    const wizard = document.getElementById('wizard-container');
    const contributionId = document.getElementById('contribution-id');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      hideError();

      const token = localStorage.getItem('erold_token');
      if (!token) {
        showError('Please sign in to submit.');
        return;
      }

      // Show loading
      submitBtn?.setAttribute('disabled', 'true');
      submitText?.classList.add('hidden');
      submitSpinner?.classList.remove('hidden');

      try {
        const payload = {
          topic: (document.getElementById('topic') as HTMLInputElement).value.toLowerCase(),
          category: (document.getElementById('category') as HTMLInputElement).value.toLowerCase(),
          guideline: {
            title: (document.getElementById('title') as HTMLInputElement).value,
            slug: (document.getElementById('title') as HTMLInputElement).value
              .toLowerCase()
              .replace(/[^a-z0-9\s-]/g, '')
              .replace(/\s+/g, '-')
              .slice(0, 50),
            version: '1.0.0',
            description: (document.getElementById('description') as HTMLTextAreaElement).value,
            tags: tags,
            related: related,
            difficulty: (document.getElementById('difficulty') as HTMLSelectElement).value,
            content: (document.getElementById('content') as HTMLTextAreaElement).value,
          }
        };

        const response = await fetch(`${API_URL}/v1/contributions`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify(payload)
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error?.message || 'Submission failed');
        }

        // Success
        wizard?.classList.add('hidden');
        successState?.classList.remove('hidden');
        if (contributionId) contributionId.textContent = data.id;

      } catch (err) {
        showError(err instanceof Error ? err.message : 'Submission failed');
      } finally {
        submitBtn?.removeAttribute('disabled');
        submitText?.classList.remove('hidden');
        submitSpinner?.classList.add('hidden');
      }
    });

    // Submit another
    document.getElementById('submit-another')?.addEventListener('click', () => {
      form.reset();
      tags = [];
      related = [];
      renderChips(tagsContainer!, tags, () => {});
      renderChips(relatedContainer!, related, () => {});
      if (descCount) descCount.textContent = '0';
      if (contentCount) contentCount.textContent = '0';
      currentStep = 1;
      goToStep(1);
      successState?.classList.add('hidden');
      wizard?.classList.remove('hidden');
    });

    // Load for editing
    async function loadContributionForEdit() {
      const editId = new URLSearchParams(window.location.search).get('edit');
      if (!editId) return;

      const token = localStorage.getItem('erold_token');
      if (!token) return;

      try {
        const response = await fetch(`${API_URL}/v1/contributions/${editId}`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });

        if (!response.ok) return;

        const data = await response.json();
        const g = data.guideline || {};

        (document.getElementById('topic') as HTMLInputElement).value = data.topic || '';
        (document.getElementById('category') as HTMLInputElement).value = data.category || '';
        (document.getElementById('title') as HTMLInputElement).value = g.title || '';
        (document.getElementById('description') as HTMLTextAreaElement).value = g.description || '';
        (document.getElementById('difficulty') as HTMLSelectElement).value = g.difficulty || 'intermediate';
        (document.getElementById('content') as HTMLTextAreaElement).value = g.content || '';

        if (descCount) descCount.textContent = String((g.description || '').length);
        if (contentCount) contentCount.textContent = String((g.content || '').length);

        tags = g.tags || [];
        related = g.related || [];
        renderChips(tagsContainer!, tags, (i) => { tags.splice(i, 1); renderChips(tagsContainer!, tags, () => {}); });
        renderChips(relatedContainer!, related, (i) => { related.splice(i, 1); renderChips(relatedContainer!, related, () => {}); });

      } catch (err) {
        console.error('Failed to load for editing:', err);
      }
    }

    // Initialize
    checkAuth();
    loadContributionForEdit();
  </script>
</BaseLayout>
