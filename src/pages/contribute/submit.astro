      <form id="guideline-form" class="space-y-8">
        <!-- Framework & Category -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="framework" class="block text-sm font-medium text-white mb-2">Framework/Technology * <span class="text-[--color-terminal-muted] font-normal">(lowercase)</span></label>
            <input type="text" id="framework" name="framework" required placeholder="e.g., nextjs, react, python, docker" class="w-full px-4 py-3 rounded-lg bg-[--color-bg-secondary] border border-[--color-border-primary] text-white placeholder:text-[--color-terminal-muted] focus:border-[--color-primary-500] focus:ring-1 focus:ring-[--color-primary-500] outline-none transition-colors font-mono" />
            <p class="mt-1 text-xs text-[--color-terminal-muted]">Any framework, library, language, or technology</p>
          </div>

          <div>
            <label for="category" class="block text-sm font-medium text-white mb-2">Category * <span class="text-[--color-terminal-muted] font-normal">(lowercase)</span></label>
            <input type="text" id="category" name="category" required placeholder="e.g., security, performance, best-practices" class="w-full px-4 py-3 rounded-lg bg-[--color-bg-secondary] border border-[--color-border-primary] text-white placeholder:text-[--color-terminal-muted] focus:border-[--color-primary-500] focus:ring-1 focus:ring-[--color-primary-500] outline-none transition-colors font-mono" />
            <p class="mt-1 text-xs text-[--color-terminal-muted]">Group related guidelines together</p>
          </div>
        </div>

        <!-- Title & Slug -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="title" class="block text-sm font-medium text-white mb-2">Title * <span class="text-[--color-terminal-muted] font-normal">(5-100 characters)</span></label>
            <input type="text" id="title" name="title" required minlength="5" maxlength="100" placeholder="e.g., Use Server Components by Default" class="w-full px-4 py-3 rounded-lg bg-[--color-bg-secondary] border border-[--color-border-primary] text-white placeholder:text-[--color-terminal-muted] focus:border-[--color-primary-500] focus:ring-1 focus:ring-[--color-primary-500] outline-none transition-colors" />
          </div>

          <div>
            <label for="slug" class="block text-sm font-medium text-white mb-2">Slug * <span class="text-[--color-terminal-muted] font-normal">(lowercase, hyphens only)</span></label>
            <input type="text" id="slug" name="slug" required placeholder="e.g., server-components-default" class="w-full px-4 py-3 rounded-lg bg-[--color-bg-secondary] border border-[--color-border-primary] text-white placeholder:text-[--color-terminal-muted] focus:border-[--color-primary-500] focus:ring-1 focus:ring-[--color-primary-500] outline-none transition-colors font-mono" />
          </div>
        </div>

        <!-- Version & Difficulty -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="version" class="block text-sm font-medium text-white mb-2">Version * <span class="text-[--color-terminal-muted] font-normal">(semver format)</span></label>
            <input type="text" id="version" name="version" required value="1.0.0" placeholder="1.0.0" class="w-full px-4 py-3 rounded-lg bg-[--color-bg-secondary] border border-[--color-border-primary] text-white placeholder:text-[--color-terminal-muted] focus:border-[--color-primary-500] focus:ring-1 focus:ring-[--color-primary-500] outline-none transition-colors font-mono" />
          </div>

          <div>
            <label for="difficulty" class="block text-sm font-medium text-white mb-2">Difficulty *</label>
            <select id="difficulty" name="difficulty" required class="w-full px-4 py-3 rounded-lg bg-[--color-bg-secondary] border border-[--color-border-primary] text-white focus:border-[--color-primary-500] focus:ring-1 focus:ring-[--color-primary-500] outline-none transition-colors">
              <option value="beginner">Beginner</option>
              <option value="intermediate">Intermediate</option>
              <option value="advanced">Advanced</option>
            </select>
          </div>
        </div>

        <!-- Description -->
        <div>
          <label for="description" class="block text-sm font-medium text-white mb-2">Description * <span class="text-[--color-terminal-muted] font-normal">(20-300 characters)</span></label>
          <textarea id="description" name="description" required minlength="20" maxlength="300" rows="2" placeholder="A brief summary of the guideline for search results and previews..." class="w-full px-4 py-3 rounded-lg bg-[--color-bg-secondary] border border-[--color-border-primary] text-white placeholder:text-[--color-terminal-muted] focus:border-[--color-primary-500] focus:ring-1 focus:ring-[--color-primary-500] outline-none transition-colors resize-none"></textarea>
          <p class="mt-1 text-sm text-[--color-terminal-muted]"><span id="desc-count">0</span>/300</p>
        </div>

        <!-- Tags -->
        <div>
          <label for="tags-input" class="block text-sm font-medium text-white mb-2">Tags * <span class="text-[--color-terminal-muted] font-normal">(1-10 tags, press Enter to add)</span></label>
          <div class="flex flex-wrap gap-2 mb-2" id="tags-container"></div>
          <input type="text" id="tags-input" placeholder="Type a tag and press Enter..." class="w-full px-4 py-3 rounded-lg bg-[--color-bg-secondary] border border-[--color-border-primary] text-white placeholder:text-[--color-terminal-muted] focus:border-[--color-primary-500] focus:ring-1 focus:ring-[--color-primary-500] outline-none transition-colors" />
          <input type="hidden" id="tags" name="tags" value="[]" />
        </div>

        <!-- Content -->
        <div>
          <label for="content" class="block text-sm font-medium text-white mb-2">Content * <span class="text-[--color-terminal-muted] font-normal">(Markdown, 100+ characters)</span></label>
          <div class="border border-[--color-border-primary] rounded-lg overflow-hidden">
            <div class="flex border-b border-[--color-border-primary] bg-[--color-bg-secondary]">
              <button type="button" id="tab-write" class="px-4 py-2 text-sm font-medium text-white border-b-2 border-[--color-primary-500]">Write</button>
              <button type="button" id="tab-preview" class="px-4 py-2 text-sm font-medium text-[--color-terminal-muted] hover:text-white transition-colors">Preview</button>
            </div>
            <textarea id="content" name="content" required minlength="100" rows="20" placeholder="# Your Guideline Title

Explain the guideline here. Use Markdown for formatting.

## Why This Matters

Explain the reasoning...

## Code Example

```javascript
// Your code example
```

## Anti-patterns

What to avoid...

## Summary

Key takeaways..." class="w-full px-4 py-3 bg-[--color-bg-tertiary] text-white placeholder:text-[--color-terminal-muted] outline-none resize-none font-mono text-sm" style="min-height: 400px;"></textarea>
            <div id="preview-container" class="hidden px-4 py-3 bg-[--color-bg-tertiary] prose prose-invert max-w-none" style="min-height: 400px;"></div>
          </div>
          <p class="mt-1 text-sm text-[--color-terminal-muted]"><span id="content-count">0</span> characters</p>
        </div>

        <!-- Error Message -->
        <div id="error-message" class="hidden p-4 rounded-lg" style="background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.3);">
          <p class="text-red-400" id="error-text"></p>
        </div>

        <!-- Submit Button -->
        <div class="flex items-center justify-between pt-4 border-t border-[--color-border-primary]">
          <a href="/contribute" class="text-[--color-terminal-muted] hover:text-white transition-colors">Cancel</a>
          <button type="submit" id="submit-btn" class="btn btn-primary">
            <span id="submit-text">Submit for Review</span>
            <svg id="submit-spinner" class="hidden w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </button>
        </div>
      </form>
    </div>

    <!-- Success State -->
    <div id="success-state" class="hidden">
      <div class="text-center py-16">
        <div class="w-16 h-16 mx-auto mb-6 rounded-full flex items-center justify-center" style="background: rgba(34, 197, 94, 0.1); border: 1px solid rgba(34, 197, 94, 0.3);">
          <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-white mb-4">Guideline Submitted!</h1>
        <p class="text-[--color-terminal-muted] mb-2">Your guideline has been submitted for review.</p>
        <p class="text-[--color-terminal-muted] mb-6">Contribution ID: <code id="contribution-id" class="font-mono text-[--color-primary-400]"></code></p>
        <div class="flex items-center justify-center gap-4">
          <a href="/contribute" class="btn btn-secondary">View My Contributions</a>
          <button type="button" id="submit-another" class="btn btn-primary">Submit Another</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    const API_URL = 'https://su5t4tzra5.execute-api.eu-west-1.amazonaws.com';

    // Parse JWT to get user info
    function parseJwt(token: string) {
      try {
        const base64Url = token.split('.')[1];
        const base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
        const jsonPayload = decodeURIComponent(atob(base64).split('').map(c =>
          '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2)
        ).join(''));
        return JSON.parse(jsonPayload);
      } catch {
        return null;
      }
    }

    // Check authentication
    function checkAuth() {
      const token = localStorage.getItem('erold_token');
      const authRequired = document.getElementById('auth-required');
      const submissionForm = document.getElementById('submission-form');
      const demoBtn = document.getElementById('demo-btn');

      if (!token) {
        authRequired?.classList.remove('hidden');
        submissionForm?.classList.add('hidden');
      } else {
        authRequired?.classList.add('hidden');
        submissionForm?.classList.remove('hidden');

        // Show demo button only for Temkit
        const payload = parseJwt(token);
        if (payload?.username === 'Temkit') {
          demoBtn?.classList.remove('hidden');
        }
      }
    }

    // Fill form with demo data
    function fillDemoData() {
      // Framework & Category
      (document.getElementById('framework') as HTMLInputElement).value = 'react';
      (document.getElementById('category') as HTMLInputElement).value = 'performance';

      // Title & Slug
      (document.getElementById('title') as HTMLInputElement).value = 'Use React.memo for Expensive Components';
      (document.getElementById('slug') as HTMLInputElement).value = 'use-react-memo-expensive-components';
      slugManuallyEdited = true;

      // Version & Difficulty
      (document.getElementById('version') as HTMLInputElement).value = '1.0.0';
      (document.getElementById('difficulty') as HTMLSelectElement).value = 'intermediate';

      // Description
      const descEl = document.getElementById('description') as HTMLTextAreaElement;
      descEl.value = 'Wrap expensive components with React.memo to prevent unnecessary re-renders and improve application performance.';
      if (descCount) descCount.textContent = String(descEl.value.length);

      // Tags
      tags = ['react', 'performance', 'optimization', 'memo'];
      renderTags();

      // Content
      const contentEl = document.getElementById('content') as HTMLTextAreaElement;
      contentEl.value = `# Use React.memo for Expensive Components

When building React applications, unnecessary re-renders can significantly impact performance. \`React.memo\` is a higher-order component that memoizes your component, preventing re-renders when props haven't changed.

## Why This Matters

React re-renders a component whenever its parent re-renders, even if the props haven't changed. For simple components, this is fine. But for components with expensive render logic, complex DOM trees, or heavy computations, this can cause performance issues.

## When to Use React.memo

Use \`React.memo\` when:
- The component renders often with the same props
- The component has expensive render logic
- The component is pure (same props = same output)

## Code Example

\`\`\`jsx
// Before: Re-renders on every parent update
function ExpensiveList({ items }) {
  return (
    <ul>
      {items.map(item => (
        <li key={item.id}>{complexCalculation(item)}</li>
      ))}
    </ul>
  );
}

// After: Only re-renders when items change
const ExpensiveList = React.memo(function ExpensiveList({ items }) {
  return (
    <ul>
      {items.map(item => (
        <li key={item.id}>{complexCalculation(item)}</li>
      ))}
    </ul>
  );
});
\`\`\`

## Custom Comparison

For complex props, provide a custom comparison function:

\`\`\`jsx
const MyComponent = React.memo(
  function MyComponent({ user, settings }) {
    return <div>{user.name} - {settings.theme}</div>;
  },
  (prevProps, nextProps) => {
    return prevProps.user.id === nextProps.user.id &&
           prevProps.settings.theme === nextProps.settings.theme;
  }
);
\`\`\`

## Anti-patterns

**Don't use React.memo when:**
- Props change frequently (memo overhead > re-render cost)
- The component is already cheap to render
- You're passing new object/array references on every render

\`\`\`jsx
// Bad: memo is useless here because style is a new object every render
<MemoizedComponent style={{ color: 'red' }} />

// Good: memoize the style object
const style = useMemo(() => ({ color: 'red' }), []);
<MemoizedComponent style={style} />
\`\`\`

## Summary

- Use \`React.memo\` for expensive pure components
- Combine with \`useMemo\` and \`useCallback\` for optimal results
- Profile before optimizing - don't premature optimize
- Custom comparison functions for complex prop structures`;
      if (contentCount) contentCount.textContent = String(contentEl.value.length);
    }

    // Demo button click handler
    document.getElementById('demo-btn')?.addEventListener('click', fillDemoData);

    // Auto-generate slug from title
    const titleInput = document.getElementById('title') as HTMLInputElement;
    const slugInput = document.getElementById('slug') as HTMLInputElement;
    let slugManuallyEdited = false;

    slugInput?.addEventListener('input', () => {
      slugManuallyEdited = true;
    });

    titleInput?.addEventListener('input', () => {
      if (!slugManuallyEdited) {
        slugInput.value = titleInput.value
          .toLowerCase()
          .replace(/[^a-z0-9\s-]/g, '')
          .replace(/\s+/g, '-')
          .replace(/-+/g, '-')
          .slice(0, 50);
      }
    });

    // Description character count
    const descInput = document.getElementById('description') as HTMLTextAreaElement;
    const descCount = document.getElementById('desc-count');

    descInput?.addEventListener('input', () => {
      if (descCount) descCount.textContent = String(descInput.value.length);
    });

    // Content character count
    const contentInput = document.getElementById('content') as HTMLTextAreaElement;
    const contentCount = document.getElementById('content-count');

    contentInput?.addEventListener('input', () => {
      if (contentCount) contentCount.textContent = String(contentInput.value.length);
    });

    // Tags handling
    const tagsContainer = document.getElementById('tags-container');
    const tagsInput = document.getElementById('tags-input') as HTMLInputElement;
    const tagsHidden = document.getElementById('tags') as HTMLInputElement;
    let tags: string[] = [];

    function renderTags() {
      if (!tagsContainer) return;
      tagsContainer.innerHTML = '';
      tags.forEach((tag, index) => {
        const span = document.createElement('span');
        span.className = 'inline-flex items-center gap-1 px-3 py-1 rounded-full text-sm font-medium';
        span.style.cssText = 'background: rgba(37, 99, 235, 0.2); color: rgb(147, 197, 253);';
        span.innerHTML = `
          ${tag}
          <button type="button" class="hover:text-white" data-index="${index}">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        `;
        tagsContainer.appendChild(span);
      });
      tagsHidden.value = JSON.stringify(tags);
    }

    tagsContainer?.addEventListener('click', (e) => {
      const btn = (e.target as Element).closest('button');
      if (btn) {
        const index = parseInt(btn.getAttribute('data-index') || '0');
        tags.splice(index, 1);
        renderTags();
      }
    });

    tagsInput?.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        const value = tagsInput.value.trim().toLowerCase().replace(/[^a-z0-9-]/g, '-');
        if (value && !tags.includes(value) && tags.length < 10) {
          tags.push(value);
          renderTags();
          tagsInput.value = '';
        }
      }
    });

    // Tab switching (Write/Preview)
    const tabWrite = document.getElementById('tab-write');
    const tabPreview = document.getElementById('tab-preview');
    const previewContainer = document.getElementById('preview-container');

    tabWrite?.addEventListener('click', () => {
      tabWrite.classList.add('border-[--color-primary-500]', 'text-white');
      tabWrite.classList.remove('text-[--color-terminal-muted]');
      tabPreview?.classList.remove('border-[--color-primary-500]', 'text-white');
      tabPreview?.classList.add('text-[--color-terminal-muted]');
      contentInput?.classList.remove('hidden');
      previewContainer?.classList.add('hidden');
    });

    tabPreview?.addEventListener('click', async () => {
      tabPreview.classList.add('border-[--color-primary-500]', 'text-white');
      tabPreview.classList.remove('text-[--color-terminal-muted]');
      tabWrite?.classList.remove('border-[--color-primary-500]', 'text-white');
      tabWrite?.classList.add('text-[--color-terminal-muted]');
      contentInput?.classList.add('hidden');
      previewContainer?.classList.remove('hidden');

      // Simple markdown preview (basic)
      if (previewContainer && contentInput) {
        let html = contentInput.value
          .replace(/^### (.*$)/gim, '<h3>$1</h3>')
          .replace(/^## (.*$)/gim, '<h2>$1</h2>')
          .replace(/^# (.*$)/gim, '<h1>$1</h1>')
          .replace(/\*\*(.*)\*\*/gim, '<strong>$1</strong>')
          .replace(/\*(.*)\*/gim, '<em>$1</em>')
          .replace(/`([^`]+)`/g, '<code>$1</code>')
          .replace(/```(\w*)\n([\s\S]*?)```/g, '<pre><code class="language-$1">$2</code></pre>')
          .replace(/\n/g, '<br>');
        previewContainer.innerHTML = html || '<p class="text-[--color-terminal-muted]">Nothing to preview yet...</p>';
      }
    });

    // Form submission
    const form = document.getElementById('guideline-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn');
    const submitText = document.getElementById('submit-text');
    const submitSpinner = document.getElementById('submit-spinner');
    const errorMessage = document.getElementById('error-message');
    const errorText = document.getElementById('error-text');
    const successState = document.getElementById('success-state');
    const contributionId = document.getElementById('contribution-id');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const token = localStorage.getItem('erold_token');
      if (!token) {
        showError('Please sign in to submit a guideline.');
        return;
      }

      // Validate tags
      if (tags.length < 1) {
        showError('Please add at least one tag.');
        return;
      }

      // Validate slug format (lowercase alphanumeric and hyphens)
      const slugPattern = /^[a-z0-9]+(?:-[a-z0-9]+)*$/;
      const frameworkVal = (document.getElementById('framework') as HTMLInputElement).value;
      const categoryVal = (document.getElementById('category') as HTMLInputElement).value;
      const slugVal = (document.getElementById('slug') as HTMLInputElement).value;
      const versionVal = (document.getElementById('version') as HTMLInputElement).value;

      if (!slugPattern.test(frameworkVal)) {
        showError('Framework must be lowercase letters, numbers, and hyphens only (e.g., nextjs, react-native)');
        return;
      }
      if (!slugPattern.test(categoryVal)) {
        showError('Category must be lowercase letters, numbers, and hyphens only (e.g., security, best-practices)');
        return;
      }
      if (!slugPattern.test(slugVal)) {
        showError('Slug must be lowercase letters, numbers, and hyphens only (e.g., server-components-default)');
        return;
      }
      if (!/^\d+\.\d+\.\d+$/.test(versionVal)) {
        showError('Version must be in semver format (e.g., 1.0.0)');
        return;
      }

      // Show loading state
      submitBtn?.setAttribute('disabled', 'true');
      submitText?.classList.add('hidden');
      submitSpinner?.classList.remove('hidden');
      errorMessage?.classList.add('hidden');

      try {
        const payload = {
          framework: (document.getElementById('framework') as HTMLInputElement).value.toLowerCase(),
          category: (document.getElementById('category') as HTMLInputElement).value.toLowerCase(),
          guideline: {
            title: (document.getElementById('title') as HTMLInputElement).value,
            slug: (document.getElementById('slug') as HTMLInputElement).value,
            version: (document.getElementById('version') as HTMLInputElement).value,
            description: (document.getElementById('description') as HTMLTextAreaElement).value,
            tags: tags,
            difficulty: (document.getElementById('difficulty') as HTMLSelectElement).value,
            content: (document.getElementById('content') as HTMLTextAreaElement).value,
          }
        };

        // Check if editing existing contribution
        const editId = (document.getElementById('guideline-form') as HTMLFormElement).dataset.editId;
        const url = editId ? `${API_URL}/v1/contributions/${editId}` : `${API_URL}/v1/contributions`;
        const method = editId ? 'PUT' : 'POST';

        const response = await fetch(url, {
          method,
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify(payload)
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error?.message || 'Failed to submit guideline');
        }

        // Show success
        document.getElementById('submission-form')?.classList.add('hidden');
        successState?.classList.remove('hidden');
        if (contributionId) contributionId.textContent = data.id;

      } catch (err) {
        showError(err instanceof Error ? err.message : 'Failed to submit guideline');
      } finally {
        submitBtn?.removeAttribute('disabled');
        submitText?.classList.remove('hidden');
        submitSpinner?.classList.add('hidden');
      }
    });

    function showError(message: string) {
      if (errorText) errorText.textContent = message;
      errorMessage?.classList.remove('hidden');
    }

    // Submit another button
    document.getElementById('submit-another')?.addEventListener('click', () => {
      form.reset();
      tags = [];
      renderTags();
      slugManuallyEdited = false;
      successState?.classList.add('hidden');
      document.getElementById('submission-form')?.classList.remove('hidden');
    });

    // Load contribution for editing
    async function loadContributionForEdit() {
      const urlParams = new URLSearchParams(window.location.search);
      const editId = urlParams.get('edit');
      if (!editId) return;

      const token = localStorage.getItem('erold_token');
      if (!token) return;

      try {
        const response = await fetch(`${API_URL}/v1/contributions/${editId}`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });

        if (!response.ok) {
          console.error('Failed to load contribution for editing');
          return;
        }

        const data = await response.json();

        // Populate form fields
        (document.getElementById('framework') as HTMLInputElement).value = data.framework || '';
        (document.getElementById('category') as HTMLInputElement).value = data.category || '';
        (document.getElementById('title') as HTMLInputElement).value = data.title || '';
        (document.getElementById('slug') as HTMLInputElement).value = data.slug || '';
        (document.getElementById('version') as HTMLInputElement).value = data.version || '1.0.0';
        (document.getElementById('difficulty') as HTMLSelectElement).value = data.difficulty || 'beginner';

        const descEl = document.getElementById('description') as HTMLTextAreaElement;
        descEl.value = data.description || '';
        if (descCount) descCount.textContent = String(descEl.value.length);

        const contentEl = document.getElementById('content') as HTMLTextAreaElement;
        contentEl.value = data.content || '';
        if (contentCount) contentCount.textContent = String(contentEl.value.length);

        // Load tags
        tags = data.tags || [];
        renderTags();

        slugManuallyEdited = true; // Don't auto-generate slug when editing

        // Update page title
        document.querySelector('h1')!.textContent = 'Edit Guideline';

        // Store edit ID for submission
        (document.getElementById('guideline-form') as HTMLFormElement).dataset.editId = editId;

      } catch (err) {
        console.error('Error loading contribution:', err);
      }
    }

    // Initialize
    checkAuth();
    loadContributionForEdit();
  </script>
</BaseLayout>
