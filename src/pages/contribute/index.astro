---
import BaseLayout from '../../layouts/BaseLayout.astro';

const steps = [
  {
    number: '01',
    title: 'Sign in with GitHub',
    description: 'Authenticate with your GitHub account to start contributing. Your contributions will be credited to your profile.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />`,
    status: 'coming-soon'
  },
  {
    number: '02',
    title: 'Write Your Guideline',
    description: 'Follow our style guide to create a clear, actionable guideline. Include code examples, anti-patterns, and AI-optimized fields.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />`,
    status: 'available'
  },
  {
    number: '03',
    title: 'AI Review',
    description: 'Your submission is automatically reviewed by Claude AI for quality, duplicates, and compliance with our standards.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />`,
    status: 'coming-soon'
  },
  {
    number: '04',
    title: 'Community Review',
    description: 'Pre-approved guidelines are reviewed by maintainers. Once approved, your guideline goes live automatically.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />`,
    status: 'coming-soon'
  }
];

const benefits = [
  { icon: 'star', title: 'Get Credited', desc: 'Your GitHub profile linked to every guideline you write' },
  { icon: 'users', title: 'Help Developers', desc: 'Share knowledge that helps thousands of developers' },
  { icon: 'cpu', title: 'Train AI', desc: 'Your guidelines help AI agents write better code' },
  { icon: 'trending', title: 'Build Reputation', desc: 'Establish yourself as an expert in your domain' }
];
---

<BaseLayout title="Contribute" description="Help build the open encyclopedia of development guidelines. Share your knowledge and help developers and AI agents build better software.">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 py-12">

    <!-- Hero -->
    <section class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-xs font-mono mb-6" style="background: rgba(34, 197, 94, 0.1); border: 1px solid rgba(34, 197, 94, 0.3); color: rgb(34, 197, 94);">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        <span>Open for Contributions</span>
      </div>

      <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">
        Share Your<br/>
        <span class="text-gradient">Knowledge</span>
      </h1>

      <p class="text-lg text-[--color-terminal-muted] max-w-2xl mx-auto mb-8">
        Help build the open encyclopedia of development guidelines. Your expertise helps developers
        write better code and trains AI agents to follow best practices.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="/guidelines/erold/contributing/how-to-write-guidelines" class="btn btn-primary">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          Read the Style Guide
        </a>
        <a href="/contribute/api" class="btn btn-secondary">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
          </svg>
          API Documentation
        </a>
      </div>
    </section>

    <!-- How it Works -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-white text-center mb-10">How It Works</h2>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {steps.map((step) => (
          <div class="relative p-6 rounded-xl" style="background: var(--color-terminal-surface); border: 1px solid var(--color-terminal-border);">
            {step.status === 'coming-soon' && (
              <span class="absolute top-4 right-4 px-2 py-0.5 rounded text-[10px] font-mono uppercase" style="background: rgba(251, 191, 36, 0.1); color: rgb(251, 191, 36); border: 1px solid rgba(251, 191, 36, 0.3);">
                Soon
              </span>
            )}
            <div class="text-4xl font-bold mb-4" style="color: var(--color-terminal-border);">{step.number}</div>
            <div class="w-10 h-10 rounded-lg flex items-center justify-center mb-4" style="background: linear-gradient(135deg, rgba(37, 99, 235, 0.2), rgba(124, 58, 237, 0.2)); border: 1px solid rgba(37, 99, 235, 0.3);">
              <svg class="w-5 h-5 text-[--color-primary-400]" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={step.icon} />
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">{step.title}</h3>
            <p class="text-sm text-[--color-terminal-muted]">{step.description}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Benefits -->
    <section class="mb-16">
      <div class="p-8 rounded-2xl" style="background: linear-gradient(135deg, rgba(37, 99, 235, 0.05), rgba(124, 58, 237, 0.05)); border: 1px solid rgba(37, 99, 235, 0.1);">
        <h2 class="text-2xl font-bold text-white text-center mb-8">Why Contribute?</h2>

        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3" style="background: rgba(251, 191, 36, 0.1); border: 1px solid rgba(251, 191, 36, 0.3);">
              <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
              </svg>
            </div>
            <h3 class="font-semibold text-white mb-1">Get Credited</h3>
            <p class="text-sm text-[--color-terminal-muted]">Your GitHub profile linked to every guideline</p>
          </div>

          <div class="text-center">
            <div class="w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3" style="background: rgba(34, 197, 94, 0.1); border: 1px solid rgba(34, 197, 94, 0.3);">
              <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-white mb-1">Help Developers</h3>
            <p class="text-sm text-[--color-terminal-muted]">Share knowledge with thousands of developers</p>
          </div>

          <div class="text-center">
            <div class="w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3" style="background: rgba(139, 92, 246, 0.1); border: 1px solid rgba(139, 92, 246, 0.3);">
              <svg class="w-6 h-6 text-violet-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="font-semibold text-white mb-1">Train AI Agents</h3>
            <p class="text-sm text-[--color-terminal-muted]">Your guidelines help AI write better code</p>
          </div>

          <div class="text-center">
            <div class="w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-3" style="background: rgba(59, 130, 246, 0.1); border: 1px solid rgba(59, 130, 246, 0.3);">
              <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <h3 class="font-semibold text-white mb-1">Build Reputation</h3>
            <p class="text-sm text-[--color-terminal-muted]">Establish yourself as a domain expert</p>
          </div>
        </div>
      </div>
    </section>

    <!-- What Makes a Good Guideline -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-white text-center mb-10">What Makes a Good Guideline?</h2>

      <div class="grid md:grid-cols-2 gap-6">
        <div class="p-6 rounded-xl" style="background: rgba(34, 197, 94, 0.05); border: 1px solid rgba(34, 197, 94, 0.2);">
          <div class="flex items-center gap-2 mb-4">
            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <h3 class="font-semibold text-white">Do</h3>
          </div>
          <ul class="space-y-3 text-sm text-[--color-terminal-muted]">
            <li class="flex items-start gap-2">
              <span class="text-green-400 mt-0.5">+</span>
              <span><strong class="text-white">Be specific</strong> - Focus on one actionable recommendation</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-green-400 mt-0.5">+</span>
              <span><strong class="text-white">Explain why</strong> - Help readers understand the reasoning</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-green-400 mt-0.5">+</span>
              <span><strong class="text-white">Include examples</strong> - Show both good and bad code</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-green-400 mt-0.5">+</span>
              <span><strong class="text-white">Add AI fields</strong> - Help AI agents apply your guideline</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-green-400 mt-0.5">+</span>
              <span><strong class="text-white">Specify versions</strong> - Note framework version constraints</span>
            </li>
          </ul>
        </div>

        <div class="p-6 rounded-xl" style="background: rgba(239, 68, 68, 0.05); border: 1px solid rgba(239, 68, 68, 0.2);">
          <div class="flex items-center gap-2 mb-4">
            <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            <h3 class="font-semibold text-white">Don't</h3>
          </div>
          <ul class="space-y-3 text-sm text-[--color-terminal-muted]">
            <li class="flex items-start gap-2">
              <span class="text-red-400 mt-0.5">-</span>
              <span><strong class="text-white">Be vague</strong> - Avoid generic advice like "write clean code"</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-red-400 mt-0.5">-</span>
              <span><strong class="text-white">Skip examples</strong> - Abstract rules are hard to apply</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-red-400 mt-0.5">-</span>
              <span><strong class="text-white">Duplicate content</strong> - Check existing guidelines first</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-red-400 mt-0.5">-</span>
              <span><strong class="text-white">Omit context</strong> - Always explain when the guideline applies</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-red-400 mt-0.5">-</span>
              <span><strong class="text-white">Use opinions</strong> - Base guidelines on established practices</span>
            </li>
          </ul>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="text-center">
      <div class="p-8 rounded-2xl" style="background: var(--color-terminal-surface); border: 1px solid var(--color-terminal-border);">
        <h2 class="text-2xl font-bold text-white mb-4">Ready to Contribute?</h2>
        <p class="text-[--color-terminal-muted] mb-6 max-w-xl mx-auto">
          Start by reading our style guide to understand the guideline format.
          Then check the API documentation to learn how to submit.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href="/guidelines/erold/contributing/how-to-write-guidelines" class="btn btn-primary">
            Read Style Guide
          </a>
          <a href="/contribute/api" class="btn btn-secondary">
            View API Docs
          </a>
        </div>
      </div>
    </section>

  </div>
</BaseLayout>
